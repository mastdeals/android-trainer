<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 	
	android:layout_height="match_parent" 
	android:layout_width="match_parent" 
	android:orientation="vertical"
	android:paddingTop="@dimen/activity_vertical_margin"
	    		android:paddingBottom="@dimen/activity_vertical_margin"
	    		android:paddingLeft="@dimen/activity_horizontal_margin"
	    		android:paddingRight="@dimen/activity_horizontal_margin"
	android:id="@+id/main_layout" 	
	android:background="@drawable/carbon_fibre" 
	android:clickable="true" android:gravity="right">
	<RelativeLayout 
		android:layout_height="match_parent" 
		android:layout_width="match_parent" 
		android:orientation="vertical"
		
		android:id="@+id/main_layout" 	
		android:background="@drawable/lista_gradient" 
		android:clickable="true" android:gravity="right">
	            
	      <ScrollView 
	          android:layout_marginTop="0dip" 
	          android:id="@+id/scrollView" 
	          android:layout_width="match_parent"
	          android:layout_height="match_parent"
	          android:padding="5dp">
				  <LinearLayout 
					android:id="@+id/internal" 
					android:orientation="vertical" 
					android:layout_height="match_parent" 
					android:layout_width="match_parent" 
					android:layout_weight="1">
					        <LinearLayout android:id="@+id/linearLayout2" 
						android:orientation="vertical" 
						
						android:layout_width="match_parent" android:layout_height="match_parent">
			            <LinearLayout 
							android:id="@+id/internal" 
							android:orientation="vertical" 
							android:layout_height="wrap_content" 
							android:layout_width="match_parent" 
							android:padding="5dp">
						
						<!-- Tempo di esercizio -->
			            <LinearLayout 
							android:id="@+id/internal" 
							android:orientation="vertical" 
							android:layout_height="match_parent" 
							android:layout_width="match_parent" 
							android:padding="5dp">
			                <LinearLayout android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/LinearLayout04" android:orientation="vertical">
			                    <TextView android:layout_marginLeft="0dip" android:id="@+id/textTitle" android:layout_marginRight="10dip" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#FFFFFF" android:text="@string/time"></TextView>
			                </LinearLayout>
			                <LinearLayout android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/LinearLayout03" android:orientation="vertical">
	
			                    <TimePicker
			                        android:id="@+id/timeManual"
			                        android:layout_width="match_parent"
			                        android:layout_height="wrap_content" 
			                        android:layout_gravity="center"
			                        android:background="@drawable/lista_gradient"/>
	
			                </LinearLayout>				
						</LinearLayout>
			            <!-- Dettaglio Inizio Distance -->
			            <LinearLayout android:layout_marginTop="5dip" android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/LinearLayout02" android:orientation="vertical">
			                <TextView android:layout_width="wrap_content" android:layout_marginLeft="0dip" android:text="@string/weight" android:layout_height="wrap_content" android:id="@+id/txtBMI" android:textColor="#FFFFFF"></TextView>
			                <EditText android:layout_weight="1" android:layout_width="fill_parent" android:layout_marginLeft="150dip" android:text="" android:numeric="decimal" android:textSize="12sp" android:paddingRight="20dip" android:layout_height="35dip" android:gravity="center_horizontal" android:background="@drawable/back_button_shape" android:editable="true" android:textStyle="bold" android:paddingLeft="20dip" android:id="@+id/txtWeight" android:textColor="#003399"></EditText>
			            </LinearLayout>	            
			            <LinearLayout android:layout_marginTop="5dip"
							android:id="@+id/internal" 
							android:orientation="vertical" 
							android:layout_height="match_parent" 
							android:layout_width="match_parent" 
							android:layout_weight="1">
						    
							<TextView 
								android:layout_marginLeft="0dip"
								android:layout_height="wrap_content" 
								android:text="@string/distance" 
								android:id="@+id/textTitle" 
								android:layout_width="wrap_content"
								android:textColor="#FFFFFF">
							</TextView>
							<EditText android:paddingRight="20dip" android:layout_marginLeft="150dip" 
								android:textSize="12sp" android:background="@drawable/back_button_shape" 
								android:text="" android:gravity="center_horizontal" 
								android:textColor="#003399" android:layout_height="35dip" 
								android:layout_weight="1" android:layout_width="fill_parent" 
								android:numeric="decimal" android:editable="true" 
								android:id="@+id/txtDistance" android:textStyle="bold" 
								android:paddingLeft="20dip">
								
							</EditText>				
						</LinearLayout>	
						<!-- Dettaglio Fine Distance-->
						
						<!-- Dettaglio Inizio Kalories-->
			            <LinearLayout android:layout_marginTop="5dip"
							android:id="@+id/internal" 
							android:orientation="vertical" 
							android:layout_height="match_parent" 
							android:layout_width="match_parent" 
							android:layout_weight="1">
						    
							<TextView 
							    android:layout_marginLeft="0dip"
								android:layout_height="wrap_content" 
								android:text="@string/kalories" 
								android:id="@+id/textTitle" 
								android:layout_width="wrap_content"
								android:textColor="#FFFFFF">
							</TextView>
							<EditText android:paddingRight="20dip" android:textSize="12sp" android:layout_weight="1" 
								android:layout_height="35dip" android:background="@drawable/back_button_shape" 
								android:text="" android:layout_width="fill_parent" android:gravity="center_horizontal" 
								android:textColor="#003399" android:numeric="decimal" android:editable="true" 
								android:id="@+id/txtKalories" android:textStyle="bold" 
								android:layout_marginLeft="150dip" android:paddingLeft="20dip"></EditText>				
						</LinearLayout>	
						<!-- Dettaglio Fine Kalories-->
						
						<!-- Dettaglio Inizio Speed-->
			            <LinearLayout android:layout_marginTop="5dip"
							android:id="@+id/internal" 
							android:orientation="vertical" 
							android:layout_height="match_parent" 
							android:layout_width="match_parent" 
							android:layout_weight="1">
						    
							<TextView 
							    android:layout_marginLeft="0dip"
								android:layout_height="wrap_content" 
								android:text="@string/speed" 
								android:id="@+id/textTitle" 
								android:layout_width="wrap_content"
								android:textColor="#FFFFFF">
							</TextView>
							<EditText android:paddingRight="20dip" android:textSize="12sp" android:layout_weight="1" 
								android:layout_height="35dip" android:background="@drawable/back_button_shape" 
								android:text="" android:layout_width="fill_parent" android:gravity="center_horizontal" 
								android:textColor="#003399" android:numeric="decimal" android:editable="true" 
								android:id="@+id/txtSpeed" android:textStyle="bold" android:layout_marginLeft="150dip" 
								android:paddingLeft="20dip"></EditText>				
						</LinearLayout>	
						<!-- Dettaglio Fine Speed-->
						
						<!-- Dettaglio Inizio Step-->	
						<!-- Dettaglio Fine Step-->
			            <LinearLayout android:layout_weight="1" android:layout_marginTop="5dip" android:layout_width="match_parent" android:id="@+id/LinearLayout05" android:orientation="vertical" android:layout_height="match_parent">
			                <TextView android:text="@string/note" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#FFFFFF" android:layout_marginLeft="0dip" android:id="@+id/TextView02"></TextView>
			                <EditText 
			                	android:background="@drawable/note_gradient"  android:textStyle="bold" android:layout_weight="1" 
			                	android:gravity="left" android:editable="true" android:paddingRight="20dip" 
			                	android:textSize="12sp" android:layout_height="75dip" android:textColor="#003399" 
			                	android:layout_width="fill_parent" android:id="@+id/txtNote" android:singleLine="false" 
			                	android:paddingLeft="20dip" android:layout_marginLeft="0dip"></EditText>
			            </LinearLayout>
					</LinearLayout>			
					<LinearLayout android:layout_marginTop="10dip" android:layout_height="wrap_content" android:id="@+id/rowWalk" android:layout_width="match_parent">
	                     <Button android:textSize="25sp"  android:textColor="#FFFFFF"  android:background="@drawable/lista_gradient" android:layout_marginTop="0dip" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:id="@+id/btnSave" android:text="@string/save_user"></Button>
	                     <Button android:textSize="25sp"  android:textColor="#FFFFFF"  android:layout_marginLeft="10dip" android:background="@drawable/lista_gradient" android:layout_marginTop="0dip" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:id="@+id/btnCancel" android:text="@string/cancel_user"></Button>
	                 </LinearLayout>									
				</LinearLayout>
				
		      </LinearLayout>
		  </ScrollView>

	</RelativeLayout>
</LinearLayout>