<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/MainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            
            android:orientation="vertical" 
            android:layout_marginTop="0dp">

    <RelativeLayout
        android:id="@+id/MainLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/carbon_fibre" 
        android:keepScreenOn="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/LLButton"
            android:layout_below="@+id/rowWalk" 
            android:layout_marginTop="10dp"
            android:background="@drawable/stopwatch_container_carbon">
	        <LinearLayout
	            android:id="@+id/linearLayout2"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_marginTop="2dp"
	            
	            android:orientation="vertical" >
		        <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:baselineAligned="false"
		            android:orientation="horizontal"
		            android:paddingRight="10dip"
		            android:paddingTop="0dip" >
					<TextView
		                        android:id="@+id/lblHeatRate"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_alignParentTop="true"
		                        android:layout_centerHorizontal="true"
		                        android:background="@drawable/heart_rate"
		                        android:gravity="center_vertical|center_horizontal"
		                        android:text="-"
		                        android:textSize="40dp"
		                        android:textAppearance="?android:attr/textAppearanceSmall"
		                        android:textColor="#FEFEFE"
		                        android:textStyle="bold"
		                        android:typeface="monospace" />
		            <LinearLayout
		                android:id="@+id/LLDetails"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_alignParentTop="true"
		                android:gravity="center|left"
		                android:orientation="vertical" >
		                <RelativeLayout
		                    android:id="@+id/LLPace"
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:gravity="left"
		                    android:orientation="horizontal" >
		                    <TextView
		                        android:id="@+id/txtPace"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_alignParentRight="true"
		                        android:layout_alignParentTop="true"
		                        android:text="-"
		                        android:textAppearance="?android:attr/textAppearanceSmall"
		                        android:textColor="#FEFEFE"
		                        android:textSize="40dp"
		                        android:textStyle="bold"
		                        android:typeface="monospace" />
		                    <TextView
		                        android:id="@+id/lblPace"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_alignParentLeft="true"
		                        android:layout_centerVertical="true"
		                        android:text="@string/pace"
		                        android:textAppearance="?android:attr/textAppearanceSmall"
		                        android:textColor="#FEFEFE"
		                        android:textSize="20dp"
		                        android:textStyle="bold"
		                        android:typeface="monospace" />
		                </RelativeLayout>
		                <RelativeLayout
		                    android:id="@+id/LLInclination"
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:gravity="left"
		                    android:orientation="horizontal" >
	
		                    <TextView
		                        android:id="@+id/txtInclination"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_alignParentRight="true"
		                        android:text="-"
		                        android:textSize="40dp"
		                        android:textAppearance="?android:attr/textAppearanceSmall"
		                        android:textColor="#FEFEFE"
		                        android:textStyle="bold"
		                        android:typeface="monospace" />
		                    <TextView
		                        android:id="@+id/lblInclination"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_alignParentLeft="true"
		                        android:layout_centerVertical="true"
		                        android:text="@string/inclination"
		                        android:textAppearance="?android:attr/textAppearanceSmall"
		                        android:textColor="#FEFEFE"
		                        android:textSize="20dp"
		                        android:textStyle="bold"
		                        android:typeface="monospace" />
		                </RelativeLayout>
	
		                <RelativeLayout
		                    android:id="@+id/LLDistance"
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:gravity="left"
		                    android:orientation="horizontal" >
	
		                    <TextView
		                        android:id="@+id/txtDistance"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_alignParentRight="true"
		                        android:text="-"
		                        android:textSize="40dp"
		                        android:textAppearance="?android:attr/textAppearanceSmall"
		                        android:textColor="#FEFEFE"
		                        android:textStyle="bold"
		                        android:typeface="monospace" 
		                        />
		                    <TextView
		                        android:id="@+id/lblDistance"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_alignParentLeft="true"
		                        android:layout_centerVertical="true"
		                        android:text="@string/distance"
		                        android:textAppearance="?android:attr/textAppearanceSmall"
		                        android:textColor="#FEFEFE"
		                        android:textSize="20dp"
		                        android:textStyle="bold"
		                        android:typeface="monospace" />
		                </RelativeLayout>
	
		                <RelativeLayout
		                    android:id="@+id/LLTime"
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:gravity="left"
		                    android:orientation="horizontal" >
	
		                    <TextView
		                        android:id="@+id/txtKalories"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_alignParentRight="true"
		                        android:text="-"
		                        android:textSize="40dp"
		                        android:textAppearance="?android:attr/textAppearanceSmall"
		                        android:textColor="#FEFEFE"
		                        android:textStyle="bold"
		                        android:typeface="monospace" />
		                    <TextView
		                        android:id="@+id/lblKalories"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_alignParentLeft="true"
		                        android:layout_centerVertical="true"
		                        android:text="@string/kalories"
		                        android:textAppearance="?android:attr/textAppearanceSmall"
		                        android:textColor="#FEFEFE"
		                        android:textSize="20dp"
		                        android:textStyle="bold"
		                        android:typeface="monospace" />
		                </RelativeLayout>
	
		                <RelativeLayout
		                    android:id="@+id/LLAlt"
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                    android:gravity="left"
		                    android:orientation="horizontal" >
	
		                    <TextView
		                        android:id="@+id/txtALT"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_alignParentRight="true"
		                        android:text="-"
		                        android:textSize="40dp"
		                        android:textAppearance="?android:attr/textAppearanceMedium"
		                        android:textColor="#FEFEFE"
		                        android:textStyle="bold"
		                        android:typeface="monospace" 
		                        android:layout_marginLeft="10dp"/>
		                    <TextView
		                        android:id="@+id/lblALT"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_alignParentLeft="true"
		                        android:layout_centerVertical="true"
		                        android:text="@string/alt"
		                        android:textAppearance="?android:attr/textAppearanceSmall"
		                        android:textColor="#FEFEFE"
		                        android:textSize="20dp"
		                        android:textStyle="bold"
		                        android:typeface="monospace" />
		                </RelativeLayout>
		            </LinearLayout>
	
		        </RelativeLayout>
		        <RelativeLayout
		            android:id="@+id/LLTime"
		            android:layout_width="match_parent"
		            android:layout_height="113dp"
		            android:orientation="horizontal" >
		            <TextView
		                android:id="@+id/txtTimeHHMM"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="0:00"
		                android:textColor="#FEFEFE"
		                android:textSize="110sp"
		                android:textStyle="bold"
		                android:typeface="normal" 
		                android:layout_alignParentBottom="true"
		                android:layout_marginLeft="25dp"/>
		            <TextView
		                android:id="@+id/txtTimeSSdd"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignBaseline="@+id/txtTimeHHMM"
		                android:layout_alignBottom="@+id/txtTimeHHMM"
		                android:layout_toRightOf="@+id/txtTimeHHMM"
		                android:text=":00"
		                android:textColor="#FEFEFE"
		                android:textSize="60sp"
		                android:textStyle="bold"
		                android:typeface="normal" />
		        </RelativeLayout>
		      </LinearLayout>
	      </ScrollView> 
	      <LinearLayout 
	      	android:orientation="horizontal" 
	      	android:layout_height="wrap_content" 
	      	android:id="@+id/LLButton" 
	      	android:layout_width="match_parent" 
	      	android:layout_alignParentBottom="true" 
	      	android:layout_centerHorizontal="true"
	      	android:layout_marginTop="5dp"
	      	android:layout_marginBottom="5dp">
	                 		        	
		      <Button 
	          	android:layout_weight="1" 
	          	android:background="@drawable/lista_gradient"  
	          	android:textColor="#FFFFFF" 
	          	android:id="@+id/btnStart" 
	          	android:layout_height="wrap_content" 
	          	android:layout_width="wrap_content" 
	          	android:text="@string/btnstart"
	          	android:layout_marginRight="5dp"
	          	android:textSize="30sp"></Button>
	          <Button 
	          	android:layout_weight="1" 
	          	android:background="@drawable/lista_gradient"  
	          	android:textColor="#FFFFFF" 
	          	android:id="@+id/btnPause" 
	          	android:layout_height="wrap_content" 
	          	android:layout_width="wrap_content" 
	          	android:text="@string/btnpause"
	          	android:textSize="30sp"></Button>
	      </LinearLayout>

	      <LinearLayout
	          android:id="@+id/rowWalk"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:layout_alignParentLeft="true"
	          android:layout_alignParentTop="true"
	          android:orientation="horizontal" 
	          android:layout_marginTop="10dp">
	          <Button
	              android:id="@+id/btnMaps"
	              android:layout_width="wrap_content"
	              android:layout_height="match_parent"
	              android:layout_marginRight="5dp"
	              android:layout_weight="0.97"
	              android:background="@drawable/lista_gradient"
	              android:text="@string/maps"
	              android:textColor="#FFFFFF"
	              android:textSize="15sp" />
	          <ImageButton
	              android:id="@+id/btnSkipTrack"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_weight="1"
	              android:background="@drawable/lista_gradient"            
	              android:textColor="#FFFFFF"
	              android:textSize="15sp" 
	              android:src="@drawable/skip"/>
	      </LinearLayout>
  	      
    </RelativeLayout>
</LinearLayout>

